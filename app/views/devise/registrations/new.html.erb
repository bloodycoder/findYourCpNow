<div class="entry-navbar navbar">
    <ul style="list-style: none;">
        <li class="logo">
          寻秘
        </li>
        <li class="link-login">
          <%= link_to '登陆', new_user_session_path %>
        </li>
    </ul>
</div>

<div class="registrations-new">
<h1 class="regist-header">创建新账号</h1>
<p class="regist-free">永久免费使用</p>
<br/>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field firstname-regist">
    <%= f.text_field :first_name, autofocus: true, autocomplete: "First", placeholder: '姓' %>
  </div>

  <div class="field lastname-regist">
    <%= f.text_field :last_name, autofocus: true, autocomplete: "Last", placeholder: '名' %>
  </div>

  <div class="field email-regist">
    <%= f.email_field :email, autocomplete: "email", placeholder: 'Email' %>
  </div>

  <div class="field password-regist">
    <%= f.password_field :password, autocomplete: "off", placeholder: "密码 ( #{@minimum_password_length} 位至少 )" %>
  </div>

  <div class="field confirm-regist">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: '确认密码' %>
  </div>

  <p class="conditions"> By clicking Sign Up, you agree to our Terms, Data Policy and Cookies Policy. You may receive SMS Notifications from us and can opt out any time. </p>

  <div class="actions registration-button">
    <%= f.submit "注册" %>
  </div>
<% end %>

</div>

<div class="external-login">
  <%= image_tag("xunmi.png") %>
</div>
